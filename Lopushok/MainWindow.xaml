<Window x:Class="Lopushok.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Lopushok"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" Icon="Resources/Лопушок.ico">
    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition Height="80*"/>
            <RowDefinition Height="287*"/>
        </Grid.RowDefinitions>
        <Grid Background="#CEFFF9">

            <Button Visibility="Visible" Margin="10" x:Name="ButtonBack" Content="Назад" HorizontalAlignment="Right" VerticalAlignment="Center" Click="ButtonBack_Click" />
            <Image Source="/Resources/Лопушок.png" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="15,0,0,0" />
            <TextBlock Foreground="#00CC76" Text="Лопушок" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="48" Height="81" Width="134"/>
        </Grid>
        <Frame x:Name="MainFrame" NavigationUIVisibility="Hidden" ContentRendered="MainFrame_ContentRendered" Grid.Row="1"/>
    </Grid>
</Window>
