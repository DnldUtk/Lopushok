<Page x:Class="Lopushok.MainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Lopushok"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="MainPage">

    <Grid>
        <Button Visibility = "Visible" x:Name="Materials" Content="Продукты" HorizontalAlignment="Left" Margin="10" VerticalAlignment="Top" Click="Materials_Click" />
        <Button Visibility = "Visible" Name="Supplier" Content="Материалы" HorizontalAlignment="Left" Margin="150,10" VerticalAlignment="Top" Click="Supplier_Click" />
        <Button Visibility = "Visible" Name="Master" Content="Мастер смены" HorizontalAlignment="Left" Margin="290,10" Width="130" VerticalAlignment="Top" Click="Master_Click" />
        <TextBlock x:Name="statusTB" Margin="5" HorizontalAlignment="Right" TextWrapping="Wrap" Text="TextBlock" VerticalAlignment="Top" Opacity="0.3" FontSize="30"/>

    </Grid>
</Page>
